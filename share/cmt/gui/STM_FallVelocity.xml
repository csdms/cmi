<dialog>
  <tab name="Input Files and Directories">
    <entry name="/STM/FallVelocity/Input/Dir">
      <label>Input directory</label>
      <help_brief>Path to input files. {cb;GUI;/data/sims/stm/FallVelocity}</help_brief>
      <default>GUI</default>
      <type>String</type>
    </entry>
    <entry name="/STM/FallVelocity/SitePrefix">
      <label>Site prefix</label>
      <help_brief>Site prefix for input/output files.</help_brief>
      <default>FallVelocity</default>
      <type>String</type>
    </entry>
    <entry name="/STM/FallVelocity/CasePrefix">
      <label>Case prefix</label>
      <help_brief>Case prefix for input/output files.</help_brief>
      <default>test</default>
      <type>String</type>
    </entry>
  </tab>
  <tab name="Run Parameters">
    <entry name="/STM/FallVelocity/Input/Var/v">
      <label>kinematic viscosity of water [m^2/s]</label>
      <help_brief>kinematic viscosity of water [m^2/s]</help_brief>
      <default>0.000001</default>
      <type>Float</type>
      <range>
        <min>0</min>
        <max>1e32</max>
      </range>
    </entry>
    <entry name="/STM/FallVelocity/Input/Var/R">
      <label>submerged specific gravity of sediment</label>
      <help_brief>submerged specific gravity of sediment</help_brief>
      <default>1.65</default>
      <type>Float</type>
      <range>
        <min>0</min>
        <max>1e32</max>
      </range>
    </entry>
    <entry name="/STM/FallVelocity/Input/Var/D">
      <label>grain size [mm]</label>
      <help_brief>grain size [mm]</help_brief>
      <default>0.1</default>
      <type>Float</type>
      <range>
        <min>0</min>
        <max>1e32</max>
      </range>
    </entry>
    <entry name="/STM/FallVelocity/Input/Var/g">
      <label>acceleration due to gravity [m/s^2]</label>
      <help_brief>acceleration due to gravity [m/s^2]</help_brief>
      <default>9.81</default>
      <type>Float</type>
      <range>
        <min>0</min>
        <max>1e32</max>
      </range>
    </entry>
  </tab>
  <tab name="About">
    <entry name="/STM/FallVelocity/ModelName">
      <label>Model name</label>
      <help_brief>Name of the model</help_brief>
      <default>FallVelocity</default>
      <type>String</type>
    </entry>
    <entry name="/STM/FallVelocity/ModelAuthor">
      <label>Author name</label>
      <help_brief>Name of the model author</help_brief>
      <default>Gary Parker</default>
      <type>String</type>
    </entry>
  </tab>
</dialog>
