<dialog>
  <tab name="Input Files and Directories">
    <entry name="/STM/Acronym1D/Input/Dir">
      <label>Input directory</label>
      <help_brief>Path to input files. {cb;GUI;/data/sims/stm/Acronym1D}</help_brief>
      <default>GUI</default>
      <type>String</type>
    </entry>
    <entry name="/STM/Acronym1D/SitePrefix">
      <label>Site prefix</label>
      <help_brief>Site prefix for input/output files.</help_brief>
      <default>Acronym1D</default>
      <type>String</type>
    </entry>
    <entry name="/STM/Acronym1D/CasePrefix">
      <label>Case prefix</label>
      <help_brief>Case prefix for input/output files.</help_brief>
      <default>test</default>
      <type>String</type>
    </entry>
  </tab>
  <tab name="Run Parameters">
    <entry name="/STM/Acronym1D/Input/Var/R">
      <label>Submerged Specific Gravity, R+1</label>
      <help_brief>Submerged Specific Gravity, R+1</help_brief>
      <default>2.65</default>
      <type>Float</type>
      <range>
        <min>0</min>
        <max>1e32</max>
      </range>
    </entry>
    <entry name="/STM/Acronym1D/Input/Var/S">
      <label>Bed Slope</label>
      <help_brief>Bed Slope</help_brief>
      <default>0.005</default>
      <type>Float</type>
      <range>
        <min>0</min>
        <max>1e32</max>
      </range>
    </entry>
    <entry name="/STM/Acronym1D/Input/Var/B">
      <label>Channel Width [m]</label>
      <help_brief>Channel Width [m]</help_brief>
      <default>12</default>
      <type>Float</type>
      <range>
        <min>0</min>
        <max>1e32</max>
      </range>
    </entry>
    <entry name="/STM/Acronym1D/Input/Var/n">
      <label>Roughness Factor</label>
      <help_brief>Roughness Factor</help_brief>
      <default>2</default>
      <type>Float</type>
      <range>
        <min>0</min>
        <max>1e32</max>
      </range>
    </entry>
  </tab>
  <tab name="About">
    <entry name="/STM/Acronym1D/ModelName">
      <label>Model name</label>
      <help_brief>Name of the model</help_brief>
      <default>Acronym1D</default>
      <type>String</type>
    </entry>
    <entry name="/STM/Acronym1D/ModelAuthor">
      <label>Author name</label>
      <help_brief>Name of the model author</help_brief>
      <default>Gary Parker</default>
      <type>String</type>
    </entry>
  </tab>
</dialog>
